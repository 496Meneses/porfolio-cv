---
const EXPERIENCES = [
    {
        dateKey: "experience.date1",
        titleKey: "experience.positions.fullstack_semi",
        company: "Intempo.SAS",
        descriptionKey: "experiences.intempo.description",
    },
    {
        dateKey: "experience.date2",
        titleKey: "experience.positions.fullstack",
        company: "Sitis SAS.",
        descriptionKey: "experiences.sitis.description",
    },
    {
        dateKey: "experience.date3",
        titleKey: "experience.positions.backend",
        company: "Universidad del Cauca.",
        descriptionKey: "experiences.ucauca.description",
    },
];
---
<div id="experiencia">
    <section class="section" aria-label="Experiencia laboral">
    <span class="section-title-principal"><span class="primary">#</span><span data-i18n="experience.title">experiencia</span></span>
    <div class="container">
        {
            EXPERIENCES.map(({ dateKey, titleKey, company, descriptionKey }) => (
                <article class="experience-entry">
                    <span class="date" data-i18n={dateKey}>Dic 2023 - Actualmente...</span>
                    <h3 class="title">
                        <span data-i18n={titleKey}>Desarrollador FullStack Semi-Senior</span> · <span class="company">{company}</span>
                    </h3>
                    <p class="description" data-i18n={descriptionKey} style="text-align: justify;">
                        Responsable del mantenimiento y evolución...
                    </p>
                </article>
            ))
        }
    </div>
</section>
</div>


<style>
    .section {
        margin: 4rem auto;
        max-width: 1200px;
        padding: 0 2rem;
    }

    .section-title {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 2rem;
        color: #fff;
    }

    .container {
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    .experience-entry {
        border: 1px solid #333;
        border-radius: 8px;
        padding: 1.5rem;
        transition: all 0.3s ease;
        background: rgba(255, 255, 255, 0.05);
    }

    .experience-entry:hover {
        transform: translateY(-4px);
        background: rgba(255, 255, 255, 0.1);
    }

    .date {
        color: #888;
        font-size: 0.9rem;
    }

    .title {
        color: #fff;
        font-size: 1.25rem;
        margin: 0.5rem 0;
    }

    .company {
        color: #64748b;
    }

    .description {
        color: #94a3b8;
        line-height: 1.5;
        margin-top: 0.5rem;
    }

    @media (max-width: 768px) {
        .section {
            padding: 0 1rem;
        }

        .section-title {
            font-size: 1.75rem;
        }
    }
</style>