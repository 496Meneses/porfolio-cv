---
---

<section id="habilidades" class="max-w-6xl mx-auto px-4 py-20">
    <h2 class="section-title-principal mb-8"><span class="primary">#</span><span data-i18n="abilities.title">habilidades</span></h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">

        <div class="bg-gray-800/50 backdrop-blur-sm border border-gray-700/50 rounded-lg p-6">
            <h3 class="text-xl font-semibold text-white mb-4" data-i18n="abilities.categories.languages">Lenguajes</h3>
            <div class="flex flex-wrap gap-4">
                <div class="group flex items-center gap-2 bg-gray-700/50 px-3 py-2 rounded-md">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/4/4c/Typescript_logo_2020.svg" alt="TypeScript" class="w-5 h-5" />
                    <span class="text-gray-300">TypeScript</span>
                </div>
                <div class="group flex items-center gap-2 bg-gray-700/50 px-3 py-2 rounded-md">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/6/6a/JavaScript-logo.png" alt="JavaScript" class="w-5 h-5" />
                    <span class="text-gray-300">JavaScript</span>
                </div>
                <div class="group flex items-center gap-2 bg-gray-700/50 px-3 py-2 rounded-md">
                    <img src="https://upload.wikimedia.org/wikipedia/en/3/30/Java_programming_language_logo.svg" alt="Java" class="w-5 h-5" />
                    <span class="text-gray-300">Java</span>
                </div>
                <div class="group flex items-center gap-2 bg-gray-700/50 px-3 py-2 rounded-md">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/c/c3/Python-logo-notext.svg" alt="Python" class="w-5 h-5" />
                    <span class="text-gray-300">Python</span>
                </div>
            </div>
        </div>

        <div class="bg-gray-800/50 backdrop-blur-sm border border-gray-700/50 rounded-lg p-6">
            <h3 class="text-xl font-semibold text-white mb-4" data-i18n="abilities.categories.databases">Bases de datos</h3>
            <div class="flex flex-wrap gap-4">
                <div class="group flex items-center gap-2 bg-gray-700/50 px-3 py-2 rounded-md">
                    <img src="https://upload.wikimedia.org/wikipedia/en/6/68/Oracle_SQL_Developer_logo.svg" alt="OracleSQL" class="w-5 h-5" />
                    <span class="text-gray-300">OracleSQL</span>
                </div>
                <div class="group flex items-center gap-2 bg-gray-700/50 px-3 py-2 rounded-md">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/3/38/SQLite370.svg" alt="SQLite" class="w-5 h-5" />
                    <span class="text-gray-300">SQLite</span>
                </div>
                <div class="group flex items-center gap-2 bg-gray-700/50 px-3 py-2 rounded-md">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/2/29/Postgresql_elephant.svg" alt="PostgreSQL" class="w-5 h-5" />
                    <span class="text-gray-300">PostgreSQL</span>
                </div>
                <div class="group flex items-center gap-2 bg-gray-700/50 px-3 py-2 rounded-md">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/9/93/MongoDB_Logo.svg" alt="MongoDB" class="w-5 h-5" />
                    <span class="text-gray-300">MongoDB</span>
                </div>
            </div>
        </div>

        <div class="bg-gray-800/50 backdrop-blur-sm border border-gray-700/50 rounded-lg p-6">
            <h3 class="text-xl font-semibold text-white mb-4" data-i18n="abilities.categories.tools">Herramientas</h3>
            <div class="flex flex-wrap gap-4">
                <div class="group flex items-center gap-2 bg-gray-700/50 px-3 py-2 rounded-md">
                    <img src="https://git-scm.com/images/logos/downloads/Git-Icon-1788C.png" alt="Git" class="w-5 h-5" />
                    <span class="text-gray-300">Git</span>
                </div>
                <div class="group flex items-center gap-2 bg-gray-700/50 px-3 py-2 rounded-md">
                    <img src="https://github.githubassets.com/images/modules/site/features/actions-icon-actions.svg" alt="GitHub Actions" class="w-5 h-5" />
                    <span class="text-gray-300">GitHub-Actions</span>
                </div>
                <div class="group flex items-center gap-2 bg-gray-700/50 px-3 py-2 rounded-md">
                    <img src="https://www.jaspersoft.com/sites/default/files/styles/banner_image_small/public/2023-06/Asset%201.png" alt="Jasper" class="w-5 h-5" />
                    <span class="text-gray-300">Jasper</span>
                </div>
                <div class="group flex items-center gap-2 bg-gray-700/50 px-3 py-2 rounded-md">
                    <img src="https://www.docker.com/wp-content/uploads/dancers/docker-logo.png" alt="Docker" class="w-5 h-5" />
                    <span class="text-gray-300">Docker</span>
                </div>
                <div class="group flex items-center gap-2 bg-gray-700/50 px-3 py-2 rounded-md">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/3/39/Kubernetes_logo_without_workmark.svg" alt="Kubernetes" class="w-5 h-5" />
                    <span class="text-gray-300">Kubernetes</span>
                </div>
                <div class="group flex items-center gap-2 bg-gray-700/50 px-3 py-2 rounded-md">
                    <img src="https://www.jenkins.io/images/logos/jenkins/jenkins.png" alt="Jenkins" class="w-5 h-5" />
                    <span class="text-gray-300">Jenkins</span>
                </div>
            </div>
        </div>

        <div class="bg-gray-800/50 backdrop-blur-sm border border-gray-700/50 rounded-lg p-6">
            <h3 class="text-xl font-semibold text-white mb-4" data-i18n="abilities.categories.frameworks">Frameworks</h3>
            <div class="flex flex-wrap gap-4">
                <div class="group flex items-center gap-2 bg-gray-700/50 px-3 py-2 rounded-md">
                    <img src="https://angular.io/assets/images/logos/angular/angular.svg" alt="Angular" class="w-5 h-5" />
                    <span class="text-gray-300">Angular</span>
                </div>
                <div class="group flex items-center gap-2 bg-gray-700/50 px-3 py-2 rounded-md">
                    <img src="https://astro.build/assets/press/astro-icon-light-gradient.svg" alt="Astro" class="w-5 h-5" />
                    <span class="text-gray-300">Astro</span>
                </div>
                <div class="group flex items-center gap-2 bg-gray-700/50 px-3 py-2 rounded-md">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/a/a7/React-icon.svg" alt="React" class="w-5 h-5" />
                    <span class="text-gray-300">React</span>
                </div>
                <div class="group flex items-center gap-2 bg-gray-700/50 px-3 py-2 rounded-md">
                    <img src="https://spring.io/img/spring-2.svg" alt="Spring Boot" class="w-5 h-5" />
                    <span class="text-gray-300">SpringBoot</span>
                </div>
            </div>
        </div>

        <div class="bg-gray-800/50 backdrop-blur-sm border border-gray-700/50 rounded-lg p-6">
            <h3 class="text-xl font-semibold text-white mb-4" data-i18n="abilities.categories.others">Otros</h3>
            <div class="flex flex-wrap gap-4">
                <div class="group flex items-center gap-2 bg-gray-700/50 px-3 py-2 rounded-md">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/6/61/HTML5_logo_and_wordmark.svg" alt="HTML" class="w-5 h-5" />
                    <span class="text-gray-300">HTML</span>
                </div>
                <div class="group flex items-center gap-2 bg-gray-700/50 px-3 py-2 rounded-md">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/d/d5/CSS3_logo_and_wordmark.svg" alt="CSS" class="w-5 h-5" />
                    <span class="text-gray-300">CSS</span>
                </div>
                <div class="group flex items-center gap-2 bg-gray-700/50 px-3 py-2 rounded-md">
                    <img src="https://tailwindcss.com/_next/static/media/tailwindcss-mark.79614a5f61617ba49a0891494521226b.svg" alt="Tailwind" class="w-5 h-5" />
                    <span class="text-gray-300">TAILWIND</span>
                </div>
                <div class="group flex items-center gap-2 bg-gray-700/50 px-3 py-2 rounded-md">
                    <img src="https://getbootstrap.com/docs/5.3/assets/brand/bootstrap-logo-shadow.png" alt="Bootstrap" class="w-5 h-5" />
                    <span class="text-gray-300">BOOTSTRAP</span>
                </div>
            </div>
        </div>
    </div>
</section>