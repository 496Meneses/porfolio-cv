<header class="fixed top-0 left-0 right-0 z-50 backdrop-blur-md bg-black/50">
    <nav class="nav">
        <div class="logo">
            <a href="#home" class="text-white hover:text-primary transition-colors">
                <span class="font-mono">Andrés</span>
            </a>
        </div>

        <button class="mobile-menu-button md:hidden" aria-label="Menú">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
        </button>

        <ul class="nav-links">
            <li>
                <a href="#home" class="nav-link">
                    <span class="primary">#</span><span data-i18n="nav.home">inicio</span>
                </a>
            </li>
            <li>
                <a href="#experiencia" class="nav-link">
                    <span class="primary">#</span><span data-i18n="nav.experience">experiencia</span>
                </a>
            </li>
            <li>
                <a href="#educacion" class="nav-link">
                    <span class="primary">#</span><span data-i18n="nav.education">educación</span>
                </a>
            </li>
            <li>
                <a href="#habilidades" class="nav-link">
                    <span class="primary">#</span><span data-i18n="nav.skills">habilidades</span>
                </a>
            </li>
            <li>
                <a href="#sobre-mi" class="nav-link">
                    <span class="primary">#</span><span data-i18n="nav.about">sobre-mi</span>
                </a>
            </li>
            <li class="language-switcher">
                <button data-lang-switch="es" class="lang-btn active" aria-label="Español">ES</button>
                <button data-lang-switch="en" class="lang-btn" aria-label="English">EN</button>
            </li>
        </ul>
    </nav>
</header>

<style>
    .nav {
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 2rem;
        position: relative;
    }

    .logo a {
        font-size: 1.5rem;
        font-weight: bold;
        text-decoration: none;
    }

    .mobile-menu-button {
        border: none;
        background: transparent;
        color: white;
        cursor: pointer;
        padding: 0.5rem;
        display: none;
    }

    .nav-links {
        display: flex;
        gap: 2rem;
        list-style: none;
        margin: 0;
        padding: 0;
        align-items: center;
    }

    .nav-link {
        text-decoration: none;
        color: #ffffff;
        opacity: 0.8;
        transition: all 0.3s ease;
        font-size: 0.9rem;
        white-space: nowrap;
    }

    .nav-link:hover {
        opacity: 1;
        color: #3182ce;
    }

    .primary {
        color: #3182ce;
    }

    .language-switcher {
        display: flex;
        gap: 0.5rem;
        align-items: center;
    }

    .lang-btn {
        background: transparent;
        border: 1px solid #3182ce;
        color: #ffffff;
        padding: 0.25rem 0.75rem;
        border-radius: 0.25rem;
        cursor: pointer;
        font-size: 0.8rem;
        font-weight: 500;
        transition: all 0.3s ease;
        opacity: 0.7;
    }

    .lang-btn:hover {
        opacity: 1;
        background: rgba(49, 130, 206, 0.2);
    }

    .lang-btn.active {
        background: #3182ce;
        opacity: 1;
    }

    @media (max-width: 768px) {
        .mobile-menu-button {
            display: block;
        }

        .nav-links {
            display: none;
            position: absolute;
            top: 100%;
            left: 0;
            right: 0;
            flex-direction: column;
            background: rgba(0, 0, 0, 0.95);
            backdrop-filter: blur(10px);
            padding: 1rem;
            gap: 1rem;
            border-radius: 0 0 0.5rem 0.5rem;
        }

        .nav-links.show {
            display: flex;
        }

        .nav-link {
            padding: 0.5rem 1rem;
            width: 100%;
            text-align: center;
        }
    }
</style>

<script>
    const mobileMenuButton = document.querySelector('.mobile-menu-button');
    const navLinks = document.querySelector('.nav-links');

    if (mobileMenuButton && navLinks) {
        mobileMenuButton.addEventListener('click', () => {
            navLinks.classList.toggle('show');
        });

        navLinks.querySelectorAll('a').forEach(link => {
            link.addEventListener('click', () => {
                navLinks.classList.remove('show');
            });
        });

        document.addEventListener('click', (e) => {
            const target = e.target as Node;
            if (!navLinks.contains(target) && !mobileMenuButton.contains(target)) {
                navLinks.classList.remove('show');
            }
        });
    }
</script>